<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.mall.product.dao.ProductDAO">
	<!-- 상품 목록 -->
	<select id="selectProductList" resultType="com.mall.product.model.Product">
		SELECT
			`id`
			,`category`
			,`name`
			,`price`
			,`detail`
			,`state`
			,`createdAt`
			,`updatedAt`
		FROM
			`product`
		ORDER BY `id` DESC
	</select>
	
	<!-- 상품 목록 (판매 중) -->
	<select id="selectProductListOnSale" resultType="com.mall.product.model.Product">
		SELECT
			`id`
			,`category`
			,`name`
			,`price`
			,`detail`
			,`state`
			,`createdAt`
			,`updatedAt`
		FROM
			`product`
		WHERE
			`state` = 1
		ORDER BY `id` DESC
	</select>
	
	<!-- 카테고리 상품 목록 (판매 중) -->
	<select id="selectProductListOnSaleByCategory" parameterType="String" resultType="com.mall.product.model.Product">
		SELECT
			`id`
			,`category`
			,`name`
			,`price`
			,`detail`
			,`state`
			,`createdAt`
			,`updatedAt`
		FROM
			`product`
		WHERE
			`category` = #{category}
			AND `state` = 1
		ORDER BY `id` DESC
	</select>
	
	<!-- 상품 조회 -->
	<select id="selectProductById" parameterType="int" resultType="com.mall.product.model.Product">
		SELECT
			`id`
			,`category`
			,`name`
			,`price`
			,`detail`
			,`state`
			,`createdAt`
			,`updatedAt`
		FROM
			`product`
		WHERE
			`id` = #{id}
	</select>
	
	<!-- 상품 추가 -->
	<insert id="insertProduct" parameterType="com.mall.product.model.Product" useGeneratedKeys="true" keyProperty="id">
		INSERT INTO `product`
		(
			`category`
			,`name`
			,`price`
			,`detail`
			,`state`
			,`createdAt`
			,`updatedAt`
		)
		VALUES
		(
			#{category}
			, #{name}
			, #{price}
			, #{detail}
			, #{state}
			, NOW()
			, NOW()
		)
	</insert>
	
	<!-- 상품 수정 -->
	<update id="updateProduct" parameterType="map">
		UPDATE `product`
		SET
			`category` = #{category}
			,`name` = #{name}
			,`price` = #{price}
			,`detail` = #{detail}
			,`state` = #{state}
			,`updatedAt` = NOW()
		WHERE
			`id` = #{id}
	</update>
	
	<!-- 상품 삭제 -->
	<delete id="deleteProduct" parameterType="int">
		DELETE
		FROM
			`product`
		WHERE
			`id` = #{id}
	</delete>
</mapper>