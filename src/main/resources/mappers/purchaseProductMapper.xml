<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.mall.purchase.dao.PurchaseProductDAO">
	<!-- 구매 상품 추가 -->
	<insert id="insertPurchaseProduct" parameterType="map">
		INSERT INTO `purchase_product`
		(
			`userId`
			,`purchaseId`
			,`productId`
			,`productDetailId`
			,`amount`
			,`exchange`
			,`refund`
			,`completion`
			,`createdAt`
			,`updatedAt`
		)
		VALUES
		(
			#{userId}
			, #{purchaseId}
			, #{productId}
			, #{productDetailId}
			, #{amount}
			, 0
			, 0
			, 0
			, NOW()
			, NOW()
		)
	</insert>
</mapper>